<div class="view">
  {% comment %} <div class="layout layout--top"> {% endcomment %}
    <div>
      <h2 class="title text--center my--2">Report for {{ features.first.properties.ReportDateTime |  divided_by: 1000 | date: '%-m/%-d/%Y' }}</h2>

      <div class="item mb--4">
        <div class="meta"></div>
        <div class="content">
          <div id="gauge-pollen-count" style="width:120px;height:120px;margin:0 auto;"></div>
          <span class="label label--small">Pollen Count</span>
        </div>
      </div>

      <div class="item mb--4">
        <div class="meta"></div>
        <div class="content">
          <span class="value value--medium py--4" data-value-fit="true">{{ features.first.properties.PollenType }}</span>
          <span class="label label--small">Pollen Type</span>
        </div>
      </div>

      <div class="item">
        <div class="meta"></div>
        <div class="content">
          <div id="gauge-aqi" style="width:120px;height:120px;margin:0 auto;"></div>
          <span class="label label--small">Air Quality Index ({{ features.first.properties.Category }})</span>
        </div>
      </div>
    </div>
  {% comment %} </div> {% endcomment %}
</div>
